@page
@model EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@ViewData["Title"]</h1>
                <span>Edit an existing user account.</span>
                <button id="update-profile-button" type="button" class="btn btn-primary mt-3" onclick="window.history.back();">
                    <i class="fa-solid fa-arrow-left mr-2"></i>Return
                </button>
            </div>
        </div>
    </div>
</div>
<div class="callback-form contact-us">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="contact-form">
                    <form style="width:500px;" id="editUserForm" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Email">Email</label>
                                    <input style="border: 2px solid #808080;" asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Password">New Password</label>
                                    <input style="border: 2px solid #808080;" asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New Password..." />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="ConfirmPassword">Confirm New Password</label>
                                    <input style="border: 2px solid #808080;" asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm New Password..." />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Role">Role</label>
                                    <select asp-for="Role" class="form-control" style="border: 2px solid #808080; border-radius: 20px;" aria-required="true">
                                        <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                                        <option value="Cashier" selected="@(Model.Role == "Cashier")">Cashier</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button id="editUserSubmit" type="submit" class="filled-button mt-3">
                                        <i class="fa-solid fa-floppy-disk mr-2"></i>Update
                                    </button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
