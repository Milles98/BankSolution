@page
@model CustomerDetailsModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="page-heading header-text">
    <h1>@ViewData["Title"]</h1>
    <button id="update-profile-button" type="button" class="btn btn-primary" onclick="window.history.back();">Return</button>
</div>

<div class="container" style="width: 80%; margin: auto; padding: 20px;">
    <!-- Customer card -->
    <div class="card">
        <div class="card-header">
            <i class="@ViewData["GenderIcon"]"></i> <!-- Font Awesome icon -->
            @Model.Customer.Givenname @Model.Customer.Surname
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Customer.Streetaddress</h5>
            <p class="card-text mb-3">Total Balance: SEK: @Model.Customer.TotalBalance</p>
            <a asp-page="/AccountsFolder/CreateAccount" asp-route-customerId="@Model.Customer.CustomerId" id="update-profile-button" class="btn btn-primary">Create Account</a>
            <a asp-page="/CustomersFolder/Create" id="update-profile-button" class="btn btn-primary">Create Customer</a>
            <a asp-page="/CustomersFolder/Edit" asp-route-id="@Model.Customer.CustomerId" id="update-profile-button" class="btn btn-primary">Edit Customer</a>
            <a asp-page="/CustomersFolder/Delete" asp-route-id="@Model.Customer.CustomerId" class="btn btn-danger">Delete Customer</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Account ID</th>
                <th scope="col">Frequency</th>
                <th scope="col">Created</th>
                <th scope="col">Account Balance</th>
                <th scope="col">Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.Customer.Accounts)
            {
                <tr>
                    <td>
                        <a asp-page="/AccountsFolder/Account" asp-route-accountIds="@account.AccountId" id="update-profile-button" class="btn btn-primary">@account.AccountId</a>
                    </td>
                    <td>@account.Frequency</td>
                    @* <td>@DateTime.Parse(account.Created).Year</td> *@
                    <td>@account.Created</td>
                    <td>SEK: @account.Balance</td>
                    <td>@account.Type</td>
                </tr>
            }
        </tbody>
    </table>
</div>


