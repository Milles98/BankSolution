@page
@model BankWeb.Pages.CustomerCRUD.EditModel

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="page-heading header-text">
    <h1>@ViewData["Title"]</h1>
    <button id="update-profile-button" type="button" class="btn btn-primary" onclick="window.history.back();">
        <i class="fa-solid fa-arrow-left mr-2"></i>Return to Customer
    </button>
</div>

<hr />
<div class="container">
    <div class="row d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Customer.CustomerId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Customer.Gender" class="control-label"></label>
                            <select asp-for="Customer.Gender" class="form-control">
                                <option value="">Select gender...</option>
                                <option value="male">male</option>
                                <option value="female">female</option>
                            </select>
                            <span asp-validation-for="Customer.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Givenname" class="control-label"></label>
                            <input asp-for="Customer.Givenname" class="form-control" />
                            <span asp-validation-for="Customer.Givenname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Surname" class="control-label"></label>
                            <input asp-for="Customer.Surname" class="form-control" />
                            <span asp-validation-for="Customer.Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Streetaddress" class="control-label"></label>
                            <input asp-for="Customer.Streetaddress" class="form-control" />
                            <span asp-validation-for="Customer.Streetaddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.City" class="control-label"></label>
                            <input asp-for="Customer.City" class="form-control" />
                            <span asp-validation-for="Customer.City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Zipcode" class="control-label"></label>
                            <input asp-for="Customer.Zipcode" class="form-control" />
                            <span asp-validation-for="Customer.Zipcode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="DispositionType" class="control-label">Disposition Type</label>
                            <select asp-for="DispositionType" class="form-control">
                                <option value="OWNER">Owner</option>
                                <option value="DISPONENT">Disponent</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Frequency" class="control-label">Frequency</label>
                            <select asp-for="Frequency" class="form-control">
                                <option value="Monthly">Monthly</option>
                                <option value="Weekly">Weekly</option>
                                <option value="AfterTransaction">After Transaction</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Customer.Country" class="control-label"></label>
                            <select asp-for="Customer.Country" class="form-control" id="countryDropdown">
                                <option value="">Select Country...</option>
                                <option value="Sweden">Sweden</option>
                                <option value="Norway">Norway</option>
                                <option value="Denmark">Denmark</option>
                                <option value="Finland">Finland</option>
                            </select>
                            <span asp-validation-for="Customer.Country" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.CountryCode" class="control-label"></label>
                            <input asp-for="Customer.CountryCode" class="form-control" readonly id="countryCode" />
                            <span asp-validation-for="Customer.CountryCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Birthday</label>
                            <select asp-for="BirthdayYear" class="form-control">
                                <option value="">Year...</option>
                                @for (int i = DateTime.Now.Year; i >= 1900; i--)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <select asp-for="BirthdayMonth" class="form-control">
                                <option value="">Month...</option>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <select asp-for="BirthdayDay" class="form-control">
                                <option value="">Day...</option>
                                @for (int i = 1; i <= 31; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.NationalId" class="control-label"></label>
                            <input asp-for="Customer.NationalId" class="form-control" />
                            <span asp-validation-for="Customer.NationalId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Telephonecountrycode" class="control-label"></label>
                            <input asp-for="Customer.Telephonecountrycode" class="form-control" readonly id="telephoneCountryCode" />
                            <span asp-validation-for="Customer.Telephonecountrycode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Telephonenumber" class="control-label"></label>
                            <input asp-for="Customer.Telephonenumber" class="form-control" />
                            <span asp-validation-for="Customer.Telephonenumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Emailaddress" class="control-label"></label>
                            <input asp-for="Customer.Emailaddress" class="form-control" />
                            <span asp-validation-for="Customer.Emailaddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <input type="submit" value="Save" id="update-profile-button" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
