@functions {
    public static string FormatNumber(decimal num)
    {
        if (num >= 1000000000)
            return (num / 1000000000).ToString("0.0") + "B";
        else if (num >= 1000000)
            return (num / 1000000).ToString("0.0") + "M";
        else if (num >= 1000)
            return (num / 1000).ToString("0.0") + "K";
        else
            return num.ToString("0.0");
    }
}

