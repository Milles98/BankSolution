@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Register</h1>
                <span>Create a new account.</span>
            </div>
        </div>
    </div>
</div>
<div class="callback-form contact-us">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="contact-form">
                    <form style="width:500px;" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @* <div class="section-heading">
                            <h2>Create a <em>new account</em></h2>
                        </div> *@
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Input.Email">Email</label>
                                    <input style="border: 2px solid #808080;" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Input.Password">Password</label>
                                    <input style="border: 2px solid #808080;" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <input style="border: 2px solid #808080;" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Input.Role">Role</label>
                                    <select asp-for="Input.Role" class="form-control" style="border: 2px solid #808080; border-radius: 20px;" aria-required="true">
                                        <option value="" disabled selected>Role...</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Cashier">Cashier</option>
                                    </select>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </fieldset>
                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <button id="registerSubmit" type="submit" class="filled-button mt-3">Register</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


